<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>


    <style name="AppTheme.Letter.Header" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.Boton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/accent</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:layout_marginLeft">@dimen/boton_margin_lados</item>
        <item name="android:layout_marginRight">@dimen/boton_margin_lados</item>
    </style>

</resources>
